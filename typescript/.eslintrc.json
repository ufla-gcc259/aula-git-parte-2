{
  "extends": ["airbnb-base", "plugin:import/typescript", "plugin:@typescript-eslint/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "snakecasejs", "prettier"],
  "parserOptions": {
    "ecmaVersion": 10,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "settings": {
    "snakecasejs/filter": [
      "ClassDeclaration",
      "NewExpression",
      "CallExpression",
      "MemberExpression",
      "Property",
      "ImportDefaultSpecifier",
      "MethodDefinition",
      "TSQualifiedName",
      "TSInterfaceDeclaration",
      "TSTypeReference",
      "TSPropertySignature",
      "ExportDefaultDeclaration",
      "TSInterfaceHeritage",
      "ImportSpecifier",
      "FunctionDeclaration",
      "TSDeclareFunction",
      "TSClassImplements",
      "TSTypeAliasDeclaration"
    ],
    "snakecasejs/whitelist": ["statusCode", "PromiseResult", "parseSnakeCaseFromJson"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      },
      "node": {
        "extensions": [".js", ".ts"]
      }
    },
    "import/extensions": [".js", ".ts"]
  },
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": "error",
    "snakecasejs/snakecasejs": "error",
    "camelcase": "off",
    "no-await-in-loop": "off",
    "import/prefer-default-export": 0,
    "no-underscore-dangle": [
      2,
      {
        "allow": ["_id", "__"]
      }
    ],
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "max-len": [
      2,
      140,
      {
        "ignoreComments": true,
        "ignoreRegExpLiterals": true,
        "ignoreTemplateLiterals": true,
        "ignoreStrings": true
      }
    ],
    "import/no-dynamic-require": 0,
    "no-plusplus": 0,
    "no-useless-constructor": "off",
    "no-restricted-syntax": 0,
    "no-mixed-operators": 0,
    "class-methods-use-this": 0,
    "comma-dangle": [
      2,
      {
        "functions": "never",
        "objects": "never"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/*.test.ts", "**/*.spec.ts", "jest.*"]
      }
    ],
    "@typescript-eslint/no-unused-vars": ["warn"],
    "@typescript-eslint/adjacent-overload-signatures": ["error"],
    "@typescript-eslint/member-ordering": ["error"],
    "@typescript-eslint/no-namespace": ["off"],
    "@typescript-eslint/no-require-imports": ["error"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "mjs": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
